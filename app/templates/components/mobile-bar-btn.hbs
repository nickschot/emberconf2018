{{#if targetRoute}}
  <LinkTo @route={{targetRoute}}>
    {{#if icon}}
      {{material-icon icon class="align-top"}}
    {{/if}}
    {{text}}
  </LinkTo>
{{else if action}}
  <a href="#{{elementId}}" class="d-block" {{action action}}>
    {{#if icon}}
      {{material-icon icon class="align-top"}}
    {{/if}}
    {{text}}
  </a>
{{/if}}