<AnimatedContainer>
  {{#animated-value "post-route" use=transition duration=200}}
    <MobileBarWrapper as |mbw|>
      <div class="mobile-page settings">
        <div class="container">
          <div class="row">
            <div class="col-xs-12 col-md-6 offset-md-3">
              <h1 class="mt-3 mb-5">
                Account
              </h1>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12 col-md-6 offset-md-3">
              <BsForm @formLayout="vertical" as |form|>
                <div class="d-flex">
                  <UserAvatar
                    @picture={{concat
                      router.rootURL
                      "img/avatar_placeholder.png"
                    }}
                    class="user-avatar--large z-depth-1 mr-3"
                  />
                  <div style="flex-grow: 1;">
                    <form.element
                      @controlType="text"
                      @label="Name"
                      @property="name"
                      required={{true}}
                    />
                  </div>
                </div>
                <form.element
                  @controlType="date"
                  @label="Birthdate"
                  @property="birthdate"
                  required={{true}}
                  class="mt-3"
                />
                <hr class="mt-4 mb-3" />
                <form.element
                  @controlType="email"
                  @label="Email"
                  @property="email"
                  required={{true}}
                />
                <form.element
                  @controlType="password"
                  @label="Password"
                  @property="password"
                  required={{true}}
                />
                <BsButton
                  @defaultText="Save"
                  @type="primary"
                  @buttonType="submit"
                />
              </BsForm>
            </div>
          </div>
        </div>
      </div>
      <mbw.mobile-bar
        @type="top"
        @collapsibleHeight={{57}}
        @isLocked={{true}}
        @isOverlay={{false}}
      >
        <div class="container">
          <div class="row">
            <div class="mx-2 my-3 d-flex align-items-center">
              <MobileBarBtn @targetRoute="home.settings" @icon="arrow_back" />
            </div>
          </div>
        </div>
      </mbw.mobile-bar>
    </MobileBarWrapper>
  {{/animated-value}}
</AnimatedContainer>