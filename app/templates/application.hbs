{{#mobile-menu-wrapper isOpen=sideMenuOpen as |mmw|}}
  {{#mobile-bar-wrapper as |wrapper|}}
    {{liquid-outlet enableGrowth=false class="app outlet"}}

    {{#wrapper.mobile-bar type='top' collapsibleHeight=46 isLocked=false class='search-menu'}}
      <div>
        {{#unless isFastBoot}}
          {{#mmw.toggle target='left'}}{{material-icon 'menu' class='text-light'}}{{/mmw.toggle}}
        {{else}}
          {{#link-to (query-params sideMenuOpen=sideMenuNewState) class='mobile-menu__toggle'}}{{material-icon 'menu'}}{{/link-to}}
        {{/unless}}

        <h1 class="text-white h4 font-weight-light d-inline-block align-middle mb-0 ml-3">EmberConf 2018</h1>
      </div>

      <ul class="nav">
        <li class="nav-item">
          <a class="nav-link active" href="#">HOME</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">APPS</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">MOVIES</a>
        </li>
      </ul>
    {{/wrapper.mobile-bar}}

    {{#wrapper.mobile-bar type='bottom' isLocked=true withShadow=false}}
      {{#bs-navbar fluid=false class='navbar-expand' id='main-menu' as |navbar|}}
        {{#navbar.content}}
          {{#navbar.nav as |nav|}}
            {{#nav.item}}
              {{#nav.link-to "index" class='text-center'}}
                {{material-icon 'home' size='lg' class='d-md-none'}}
                <div>Home</div>
              {{/nav.link-to}}
            {{/nav.item}}
            {{#nav.item}}
              {{#nav.link-to "posts" class='text-center'}}
                {{material-icon 'archive' size='lg' class='d-md-none'}}
                <div>Archive</div>
              {{/nav.link-to}}
            {{/nav.item}}
          {{/navbar.nav}}
        {{/navbar.content}}
      {{/bs-navbar}}
    {{/wrapper.mobile-bar}}
  {{/mobile-bar-wrapper}}

  {{#mmw.mobile-menu as |mobile-menu|}}
    <div class="mobile-menu__header">
      <h3>Left Menu</h3>
    </div>
    <div class="mobile-menu__body">
      <ul class="nav flex-column">
        <li class="nav-item">
          {{#mobile-menu.link-to 'index' class="nav-link"}}{{material-icon 'home'}} Home{{/mobile-menu.link-to}}
        </li>
        <li class="nav-item">
          {{#mobile-menu.link-to 'posts' class="nav-link"}}{{material-icon 'archive'}} Archive{{/mobile-menu.link-to}}
        </li>
        <li class="divider"></li>
        <li class="nav-item">
          <a class="nav-link" href="#">Link</a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled" href="#">Disabled</a>
        </li>
      </ul>
    </div>
  {{/mmw.mobile-menu}}
  {{#mmw.mobile-menu type='right' as |mobile-menu|}}
    <div class="mobile-menu__header">
      <h3>Right Menu</h3>
    </div>
    <div class="mobile-menu__body">
      <ul class="nav flex-column">
        <li class="nav-item">
          {{#mobile-menu.link-to 'index' class="nav-link"}}{{material-icon 'home'}} Home{{/mobile-menu.link-to}}
        </li>
        <li class="nav-item">
          {{#mobile-menu.link-to 'posts' class="nav-link"}}{{material-icon 'archive'}} Archive{{/mobile-menu.link-to}}
        </li>
      </ul>
    </div>
  {{/mmw.mobile-menu}}
{{/mobile-menu-wrapper}}