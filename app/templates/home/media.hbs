<ToElsewhere @named="top-toolbar-title" @send="Media" />
<MobilePage @route="home.media" @isRoot={{true}}>
  <div class="row">
    <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
      <MobilePane @activeIndex={{this.pane}} @onChange={{this.updatePane}} as |mp|>
        <ToElsewhere @named="top-toolbar-second-row" @send={{mp.nav}} />
        <div class="col-12 d-none d-sm-block mt-5">
          <div class="card-header bg-primary pb-0 pt-2">
            <mp.nav/>
          </div>
        </div>
        <mp.scroller as |mps|>
          <mps.pane @title="All">
            <div class="col-12">
              <div class="card my-3 my-sm-0 rounded-0">
                <div style="height: 60vh"></div>
              </div>
            </div>
          </mps.pane>
          <mps.pane @title="Movies">
            <MobilePane as |mp|>
              <HeadlineCarousel class="z-depth-1 mt-sm-3" @posts={{model}} />
            </MobilePane>
          </mps.pane>
          <mps.pane @title="Music">
            <div class="col-12">
              <div class="card my-3 my-sm-0  rounded-0">
                <div style="height: 60vh"></div>
              </div>
            </div>
          </mps.pane>
          <mps.pane @title="Games">
            <div class="col-12">
              <div class="card my-3 my-sm-0  rounded-0">
                <div style="height: 60vh"></div>
              </div>
            </div>
          </mps.pane>
          <mps.pane @title="Books">
            <div class="col-12">
              <div class="card my-3 my-sm-0  rounded-0">
                <div style="height: 60vh"></div>
              </div>
            </div>
          </mps.pane>
          <mps.pane @title="News">
            <div class="col-12">
              <div class="card my-3 my-sm-0 rounded-0">
                <div style="height: 60vh"></div>
              </div>
            </div>
          </mps.pane>
        </mp.scroller>
      </MobilePane>
    </div>
  </div>
</MobilePage>