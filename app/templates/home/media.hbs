{{to-elsewhere named='top-toolbar-title' send='Media'}}

{{#mobile-page route='home.media' isRoot=true}}

  <div class="row">
    <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
      {{#mobile-pane
        activeIndex=pane
        onChange=(action (mut pane))
      as |mp|}}

        {{to-elsewhere named='top-toolbar-second-row' send=mp.nav}}

        <div class="col-12 d-none d-sm-block mt-5">
          <div class="card-header bg-primary pb-0 pt-2">
            {{mp.nav}}
          </div>
        </div>

        {{#mp.scroller as |mps|}}
          {{#mps.pane title="All"}}
            <div class="col-12">
              <div class="card my-3 my-sm-0 rounded-0">
                <div style="height: 60vh"></div>
              </div>
            </div>
          {{/mps.pane}}
          {{#mps.pane title="Movies"}}
            {{#mobile-pane as |mp|}}
              {{headline-carousel class="z-depth-1 mt-sm-3" posts=model}}
            {{/mobile-pane}}
          {{/mps.pane}}
          {{#mps.pane title="Music"}}
            <div class="col-12">
              <div class="card my-3 my-sm-0  rounded-0">
                <div style="height: 60vh"></div>
              </div>
            </div>
          {{/mps.pane}}
          {{#mps.pane title="Games"}}
            <div class="col-12">
              <div class="card my-3 my-sm-0  rounded-0">
                <div style="height: 60vh"></div>
              </div>
            </div>
          {{/mps.pane}}
          {{#mps.pane title="Books"}}
            <div class="col-12">
              <div class="card my-3 my-sm-0  rounded-0">
                <div style="height: 60vh"></div>
              </div>
            </div>
          {{/mps.pane}}
          {{#mps.pane title="News"}}
            <div class="col-12">
              <div class="card my-3 my-sm-0 rounded-0">
                <div style="height: 60vh"></div>
              </div>
            </div>
          {{/mps.pane}}
        {{/mp.scroller}}
      {{/mobile-pane}}
    </div>
  </div>
{{/mobile-page}}