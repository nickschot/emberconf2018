{{to-elsewhere named='mobile-bar-top-btn-left' send=(component 'mobile-bar-btn'
  targetRoute='home.settings.index'
  icon='arrow_back'
  text='Settings'
)}}
{{to-elsewhere named='mobile-bar-top-title' send='Account'}}

{{#animated-container}}
  {{#animated-bind 'post-route' use=transition duration=200}}
    <div class="mobile-page settings">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-md-6 offset-md-3">
            <h1 class="mt-3 mb-5">Account</h1>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-md-6 offset-md-3">
            {{#bs-form formLayout='vertical' as |form|}}
              <div class="d-flex">
                {{user-avatar picture='/img/tomster.png' class='user-avatar--large z-depth-1 mr-3'}}
                <div style="flex-grow: 1;">
                  {{form.element controlType="text" label="Name" property="name" required=true}}
                </div>
              </div>

              {{form.element controlType="date" label="Birthdate" property="birthdate" required=true class="mt-3"}}

              <hr class="mt-4 mb-3">

              {{form.element controlType="email" label="Email" property="email" required=true}}
              {{form.element controlType="password" label="Password" property="password" required=true}}

              {{bs-button defaultText="Save" type="primary" buttonType="submit"}}
            {{/bs-form}}
          </div>
        </div>
      </div>
    </div>
  {{/animated-bind}}
{{/animated-container}}