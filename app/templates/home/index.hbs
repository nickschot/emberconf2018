<MobilePage @route="home.index" @isRoot={{true}}>
  <div class="container posts">
    <div class="row">
      <div class="col-12 col-lg-6 offset-lg-1">
        <HeadlineCarousel class="z-depth-1 mt-sm-3" @posts={{model}} />
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-lg-10 offset-lg-1">
        <h1 class="display-4 text-primary mt-5 mb-2 d-none d-sm-block">
          Headlines
        </h1>
        <div class="card rounded-large">
          <div class="list-group list-group-flush">
            {{#each model as |post|}}
              <LinkTo
                @route="home.posts.post"
                @model={{post}}
                class="list-group-item list-group-item-action p-2 mb-sm-3"
              >
                <div class="media d-flex align-items-stretch">
                  <div class="post-img mb-sm-3">
                    <div class="img-responsive">
                      <ResponsiveImage @image={{post.headerImage}} @size="20" />
                    </div>
                  </div>
                  <div
                    class="media-body ml-3 ml-sm-0 d-flex flex-row align-items-center"
                  >
                    <h3 class="mt-0 font-weight-bold">
                      {{post.title}}
                    </h3>
                  </div>
                </div>
              </LinkTo>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</MobilePage>