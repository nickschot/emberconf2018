{{#mobile-menu-wrapper as |mmw|}}

  {{!-- show side menu when main menu is enabled --}}
  {{#if menuEnabled}}
    {{#mmw.mobile-menu as |mobile-menu|}}
      <div class="mobile-menu__header d-flex flex-column justify-content-between">
        <div class="header__text">
          {{user-avatar
            picture='/img/tomster.png'
            class='z-depth-1'
          }}
        </div>
        <div class="header__btn d-flex justify-content-between">
          <div>
            Tomster
            <small class="d-block">tomster@example.com</small>
          </div>
        </div>
      </div>
      <div class="mobile-menu__body">
        <ul class="mobile-menu__nav">
          <li class="mobile-menu__nav-item">
            {{#mobile-menu.link-to 'home.index' class="mobile-menu__nav-link"}}{{material-icon 'home'}} Home{{/mobile-menu.link-to}}
          </li>
          <li class="mobile-menu__nav-item">
            {{#mobile-menu.link-to 'home.posts' class="mobile-menu__nav-link"}}{{material-icon 'archive'}} Archive{{/mobile-menu.link-to}}
          </li>
          <li class="mobile-menu__nav-divider"></li>
          <li class="mobile-menu__nav-item">
            {{#mobile-menu.link-to "home.contact" class='mobile-menu__nav-link'}}{{material-icon 'question_answer'}} Contact{{/mobile-menu.link-to}}
          </li>
          <li class="mobile-menu__nav-item">
            {{#mobile-menu.link-to 'home.settings' class="mobile-menu__nav-link"}}{{material-icon 'settings'}} Settings{{/mobile-menu.link-to}}
          </li>
        </ul>
      </div>
    {{/mmw.mobile-menu}}
  {{/if}}

  {{#animated-container class=(if motion.isAnimating 'animated-page')}}
    {{#mobile-bar-wrapper as |mbw|}}

      <div class="mobile-bar__content">
        {{outlet}}
      </div>

      {{!-- show the top bar only on mobile --}}
      {{#if media.isXs}}
        {{#mbw.mobile-bar type='top' isLocked=true}}
          {{mobile-bar-top-menu}}
        {{/mbw.mobile-bar}}
      {{/if}}

      {{!-- show the main menu bar when enabled, moves to top on larger screens --}}
      {{#animated-if menuEnabled rules=mobileBarBottomTransition duration=400}}
        {{to-elsewhere named='mobile-bar-top-btn-left' send=(hash
          action=mmw.actions.toggle
          icon='menu'
        )}}

        {{#mbw.mobile-bar type=mainMenuPosition isLocked=true}}
          {{#bs-navbar fluid=true backgroundColor='white' class='navbar-expand' id='main-menu' as |navbar|}}
            <div class="navbar-header d-none d-sm-block">
              <span class="navbar-brand text-primary mr-5">EmberConf 2018</span>
            </div>
            {{#navbar.content}}
              {{#navbar.nav class="mx-auto ml-sm-0" as |nav|}}
                {{#nav.item}}
                  {{#nav.link-to "home.index" class='text-center'}}
                    {{material-icon 'home' class='d-sm-none'}}
                    <div>Home</div>
                  {{/nav.link-to}}
                {{/nav.item}}
                {{#nav.item}}
                  {{#nav.link-to "home.posts" class='text-center'}}
                    {{material-icon 'archive' class='d-sm-none'}}
                    <div>Archive</div>
                  {{/nav.link-to}}
                {{/nav.item}}
                {{#nav.item}}
                  {{#nav.link-to "home.contact" class='text-center'}}
                    {{material-icon 'question_answer' class='d-sm-none'}}
                    <div>Contact</div>
                  {{/nav.link-to}}
                {{/nav.item}}
                {{#nav.item}}
                  {{#nav.link-to "home.settings" class='text-center'}}
                    {{material-icon 'settings' class='d-sm-none'}}
                    <div>Settings</div>
                  {{/nav.link-to}}
                {{/nav.item}}
              {{/navbar.nav}}

              {{#navbar.nav class="d-none d-sm-block" as |nav|}}
                {{#nav.dropdown as |dd|}}
                  {{#dd.toggle class="py-0 dropdown-toggle--with-avatar"}}
                    {{user-avatar
                      name='Tomster'
                      picture='/img/tomster.png'
                      class='d-inline-block'
                    }}
                  {{/dd.toggle}}
                  {{#dd.menu align='right' as |ddm|}}
                    {{#ddm.item}}
                      {{#ddm.link-to "home.settings.account"}}Account{{/ddm.link-to}}
                    {{/ddm.item}}

                    {{ddm.divider}}

                    {{#ddm.item}}
                      <a href="" class="dropdown-item">Logout</a>
                    {{/ddm.item}}
                  {{/dd.menu}}
                {{/nav.dropdown}}
              {{/navbar.nav}}
            {{/navbar.content}}
          {{/bs-navbar}}
        {{/mbw.mobile-bar}}
      {{/animated-if}}
    {{/mobile-bar-wrapper}}
  {{/animated-container}}
{{/mobile-menu-wrapper}}